doctype html
html
  block vars
    - var basePath = './';
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='theme-color', content='#ffffff')

    title= title

    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700')
    //- link(rel='stylesheet', href='/css/icomoon/style.css')
    link(rel='stylesheet', href=basePath + '../sass/style.scss')

    link(rel='apple-touch-icon', sizes='180x180', href=basePath + '../assets/favicons/apple-touch-icon.png')
    link(rel='icon', type='image/png', href=basePath + '../assets/favicons/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href=basePath + '../assets/favicons/favicon-16x16.png', sizes='16x16')
    link(rel='manifest', href=basePath + '../assets/favicons/manifest.json')
    link(rel='mask-icon', href=basePath + '../assets/favicons/safari-pinned-tab.svg', color='#5bbad5')
    link(rel='shortcut icon', href=basePath + '../assets/favicons/favicon.ico')

    block styles

  body
    
    header
      h1.logo
        a(href="/") makmonty
      
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/games.html") Games
          li
            a(href="http://blog.makmonty.com") Blog
    
    .main-container
      block content

    footer
      .container
        p Follow me at #[a(href="http://twitter.com/makmonty") Twitter] and #[a(href="http://github.com/makmonty") Github]

